" Syntax highlighting
syntax on

" Indentation
filetype indent plugin on

" Indentation and tab width
set tabstop=4 softtabstop=0 shiftwidth=4 expandtab autoindent

" Column number, line number
set ruler

" Line numbers
set nu

" Encoding, file format
set encoding=utf-8
set ff=unix

" Completion
set wildmenu

" Collapsing/folding
set foldmethod=indent
set foldlevel=99
